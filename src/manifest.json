{
  "package": "com.sohu.module",
  "name": "搜狐视频",
  "versionName": "1.0.0",
  "versionCode": "1",
  "minPlatformVersion": "101",
  "icon": "/Common/logoB.png",
  "features": [
    { "name": "system.prompt" }
    ,{ "name": "system.router" }
    ,{ "name": "system.shortcut" }
    ,{ "name": "system.fetch" }
    ,{"name": "system.device"}
    ,{"name": "system.share"}
    ,{"name": "system.network"}
  ],
  "permissions": [
    { "origin": "*" }
  ],
  "config": {
    "logLevel": "debug"
  },
  "router": {
    "entry": "Index",
    "pages": {
      "Index": {
        "component": "index"
      },
      "Demo":{
      "component": "index"
    },
      "Play":{
      "component": "play",
      "path":"/play"
    }
    }
  },
  "display": {
    "titleBarBackgroundColor": "#f2f2f2",
    "titleBarTextColor": "#414141",
    "menu": false,
    "fullScreen": true,
    "titleBar": false
  }
}
